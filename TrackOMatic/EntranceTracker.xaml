<UserControl x:Class="TrackOMatic.EntranceTracker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrackOMatic"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{StaticResource RegionBG}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource RegionImageBG}" CornerRadius="4" Margin="3" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="ENTRANCE RANDOMIZER" 
                          FontFamily="{DynamicResource DK64Font}" 
                          FontSize="24" 
                          Foreground="White" 
                          VerticalAlignment="Center"/>
                <Button Grid.Column="1" 
                       Content="Clear All" 
                       Click="ClearAll_Click"
                       Padding="10,3"
                       Background="{StaticResource VeryDark}"
                       Foreground="White"
                       BorderBrush="{StaticResource BaseBG}"
                       BorderThickness="1"/>
            </Grid>
        </Border>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel x:Name="EntrancesPanel" Margin="3">
                <!-- Entrance items will be added here programmatically -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
